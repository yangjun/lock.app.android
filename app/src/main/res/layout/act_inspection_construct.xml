<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/verticalContainerTheme"
    android:fitsSystemWindows="true">

    <include layout="@layout/inflate_header" />

    <!-- The main content view -->
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/v_footer_split" />

        <LinearLayout
            android:id="@+id/ll_menu"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/bg_window"
            android:orientation="vertical">

            <TextView
                style="@style/wrapTheme"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="48dp"
                android:text="@string/label_category_select"
                android:textColor="@color/txt_desc"
                android:textSize="@dimen/text_size_medium" />

            <View
                style="@style/splitTheme"
                android:layout_marginTop="@dimen/activity_horizontal_margin_half" />

            <ListView
                android:id="@+id/lst_menu"
                style="@style/listVTheme"
                android:divider="@color/bg_item_light"
                android:dividerHeight="@dimen/height_divider" />
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>

    <View
        android:id="@+id/v_footer_split"
        style="@style/splitTheme" />

    <LinearLayout
        android:id="@+id/ll_footer"
        style="@style/wrapHeightTheme"
        android:layout_height="@dimen/height_footer"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_category"
            style="@style/horizontalWeightTheme"
            android:layout_height="match_parent"
            android:background="@drawable/selector_footer_btn"
            android:scaleType="center"
            android:src="@mipmap/ic_category" />

        <ImageView
            android:id="@+id/iv_unlock"
            style="@style/horizontalWeightTheme"
            android:layout_height="match_parent"
            android:background="@drawable/selector_footer_btn"
            android:scaleType="center"
            android:src="@mipmap/ic_unlock" />

        <ImageView
            android:id="@+id/iv_forward"
            style="@style/horizontalWeightTheme"
            android:layout_height="match_parent"
            android:background="@drawable/selector_footer_btn"
            android:scaleType="center"
            android:src="@mipmap/ic_forward" />

        <ImageView
            android:id="@+id/iv_backward"
            style="@style/horizontalWeightTheme"
            android:layout_height="match_parent"
            android:background="@drawable/selector_footer_btn"
            android:scaleType="center"
            android:src="@mipmap/ic_backword" />
    </LinearLayout>


</LinearLayout>