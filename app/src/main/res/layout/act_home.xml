<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/verticalContainerTheme">

    <RelativeLayout style="@style/wrapHeightTheme">

        <ImageView
            android:id="@+id/iv"
            style="@style/wrapHeightTheme"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_banner" />

        <FrameLayout
            android:id="@+id/fl_header"
            style="@style/wrapHeightTheme">

            <include layout="@layout/inflate_header" />

            <TextView
                android:id="@+id/tv_open_door"
                style="@style/wrapTheme"
                android:background="@drawable/selector_btn_title_hollow"
                android:paddingBottom="1dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="1dp"
                android:text="@string/title_open_door"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="64dp"/>
        </FrameLayout>

    </RelativeLayout>

</LinearLayout>