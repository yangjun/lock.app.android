<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/verticalContainerTheme"
    android:fitsSystemWindows="true">

    <include layout="@layout/inflate_header" />

    <LinearLayout style="@style/verticalContainerTheme">

        <TextView
            android:id="@+id/tv_indicator"
            style="@style/verticalWeightTheme"
            android:gravity="center"
            android:textColor="@color/txt_content"
            android:textSize="@dimen/text_size_medium" />

        <com.wm.lock.core.widget.GesturePrintView
            android:id="@+id/gpv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            app:lock9_lineColor="#1ea0ea"
            app:lock9_lineWidth="4dp"
            app:lock9_nodeOnSrc="@mipmap/lock_9_view_node_highlighted"
            app:lock9_nodeSrc="@mipmap/lock_9_view_node_normal"
            app:lock9_spacing="48dp" />

        <View style="@style/verticalWeightTheme" />

    </LinearLayout>

</LinearLayout>