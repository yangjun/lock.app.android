<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <!--***************************************************************-->
    <!--*********************** 系统主题配置 start **********************-->
    <!--***************************************************************-->
    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/bg_window</item>
        <item name="android:windowAnimationStyle">@style/anim_activity</item>
        <!--<item name="windowActionBar">false</item>-->
        <item name="colorPrimary">@color/bg_title</item>
        <item name="colorPrimaryDark">@color/bg_title</item>
        <item name="colorAccent">@color/bg_accent</item>
        <!-- 标题文字颜色 -->
        <item name="android:textColorPrimary">@color/txt_title</item>
        <!-- 菜单样式 -->
        <item name="actionMenuTextAppearance">@style/ActionMenuTextStyle</item>
        <!-- 菜单文字颜色 -->
        <item name="actionMenuTextColor">@drawable/menu_text_color</item>
        <!-- 菜单"更多"按钮样式 -->
        <!-- <item name="actionOverflowButtonStyle">@style/OverflowMenuStyle</item> -->
        <!-- 菜单下拉框外壳样式 -->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
        <!-- 菜单下拉框的列表样式 -->
        <item name="dropDownListViewStyle">@style/PopupMenuListViewStyle</item>
        <!-- 菜单的点击区域的大小 -->
        <item name="actionButtonStyle">@style/actionButtonStyle</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="AppTranslucentTheme" parent="AppTheme"></style>

    <!-- full screen theme. -->
    <style name="AppFullScreenTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTransparentFullScreenTheme" parent="AppFullScreenTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="AppTransparentTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="AppSplashTheme" parent="android:Theme">
        <item name="android:windowBackground">@mipmap/splash</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="anim_activity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="ActionMenuTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:popupBackground">?attr/colorPrimary</item>
        <item name="android:dropDownVerticalOffset">5dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
        <item name="android:minWidth">50dp</item>
    </style>

    <style name="OverflowMenuButtonStyle" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
        <!--<item name="android:src">@drawable/abc_ic_menu_moreoverflow_mtrl_alpha</item>-->
        <item name="android:background">?attr/actionBarItemBackground</item>
        <item name="android:contentDescription">@string/abc_action_menu_overflow_description</item>
        <item name="android:minWidth">@dimen/abc_action_button_min_width_overflow_material</item>
        <item name="android:minHeight">@dimen/abc_action_button_min_height_material</item>
    </style>

    <style name="PopupMenuListViewStyle" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/bg_title_light</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:listSelector">@drawable/selector_list_menu</item>
    </style>

    <style name="actionButtonStyle" parent="@style/Widget.AppCompat.ActionButton">
        <item name="android:minWidth">?attr/actionBarSize</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="Transparent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>
    <!--***************************************************************-->
    <!--*********************** 系统主题配置 end ************************-->
    <!--***************************************************************-->


    <style name="matchTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- set width and height to wrap_content -->
    <style name="wrapTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- set width to wrap_content and height to match_parent -->
    <style name="wrapWidthTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- set width to match_parent and height to wrap_content -->
    <style name="wrapHeightTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- set width to match_parent、 height to match_parent and orientation to vertical -->
    <style name="verticalContainerTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- set width to match_parent、 height to wrap_content and orientation to vertical -->
    <style name="verticalWrapContainerTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- set height to wrap_content and width layoutd by scale -->
    <style name="horizontalWeightTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- set height layoutd by scale and width to wrap_content -->
    <style name="verticalWeightTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- set height to wrap_content and width layoutd by scale -->
    <style name="wrapHeightWeightTheme" parent="wrapHeightTheme">
        <item name="android:layout_weight">1</item>
    </style>

    <!-- 列表样式 -->
    <style name="listTheme" parent="matchTheme">
        <!-- 去掉上下阴影和拖动黑影 -->
        <item name="android:fadingEdge">none</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <!-- 按钮样式 -->
    <style name="btnBaseTheme">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_btn</item>
        <item name="android:textColor">@drawable/selector_txt_title</item>
    </style>

    <!-- content样式 -->
    <style name="contentTheme" parent="wrapHeightTheme">
        <item name="android:textColor">@color/txt_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- desc样式 -->
    <style name="descTheme" parent="wrapHeightTheme">
        <item name="android:textColor">@color/txt_desc</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- desc smaller样式 -->
    <style name="descSmallerTheme" parent="descTheme">
        <item name="android:textSize">@dimen/text_size_smaller</item>
    </style>

    <!-- label样式 -->
    <style name="itemLabelTheme">
        <item name="android:layout_width">@dimen/width_label</item>
        <item name="android:layout_height">@dimen/height_item</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@drawable/selector_txt_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- content样式 -->
    <style name="itemContentTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/height_item</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textColor">@drawable/selector_txt_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:paddingTop">@dimen/padding_item_top</item>
        <item name="android:paddingBottom">@dimen/padding_item_top</item>
        <item name="android:textColorHint">@color/txt_desc_light</item>
    </style>

    <style name="itemGroupTheme" parent="verticalWrapContainerTheme">
        <item name="android:background">@color/bg_item</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="splitTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_divider</item>
        <item name="android:background">@color/bg_item_light</item>
    </style>

    <style name="splitInnerTheme" parent="splitTheme">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="itemHeaderTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_smaller</item>
        <item name="android:textColor">@color/txt_desc</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin_half</item>
        <item name="android:layout_marginLeft">@dimen/activity_vertical_margin</item>
    </style>

    <style name="itemContainerTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="rippleAlpha">0.1</item>
        <item name="rippleBackground">@color/bg_item</item>
        <item name="rippleColor">@color/txt_content</item>
        <item name="rippleHover">true</item>
        <item name="rippleInAdapter">false</item>
        <item name="rippleOverlay">false</item>
    </style>

    <style name="itemGrouperTheme" parent="verticalWrapContainerTheme">
        <item name="android:background">@color/txt_title</item>
    </style>

    <style name="labelTheme" parent="wrapTheme">
        <item name="android:textColor">@color/txt_desc</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="inputTheme" parent="wrapHeightTheme">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@drawable/selector_txt_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColorHint">@color/txt_desc</item>
        <item name="android:background">@drawable/selector_bg_input</item>
        <item name="android:minHeight">@dimen/height_input</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="inputMultiTheme" parent="inputTheme">
        <item name="android:minHeight">@dimen/height_input_multi</item>
        <item name="android:singleLine">false</item>
        <item name="android:gravity">left|top</item>
    </style>

    <style name="inputRegisterTheme" parent="inputTheme">
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">@dimen/activity_horizontal_margin_half</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="scrollVTheme" parent="matchTheme">
        <item name="android:scrollbars">none</item>
        <item name="android:listSelector">@color/transparent</item>
    </style>

    <style name="listVTheme" parent="listTheme">
        <item name="android:scrollbars">none</item>
    </style>

    <style name="itemTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/height_item</item>
        <item name="android:paddingLeft">@dimen/padding_item_left</item>
        <item name="android:paddingRight">@dimen/padding_item_left</item>
        <item name="android:paddingTop">@dimen/padding_item_top</item>
        <item name="android:paddingBottom">@dimen/padding_item_top</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@drawable/selector_txt_content</item>
        <item name="android:drawablePadding">@dimen/padding_item_top</item>
        <item name="android:background">@drawable/selector_item</item>
    </style>

    <style name="itemRightTheme" parent="itemTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textColorHint">@color/txt_desc</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:drawableRight">@mipmap/ic_arrow_right_dark</item>
    </style>

    <style name="txtBtnTheme" parent="wrapTheme">
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@drawable/selector_txt_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="roundProgressBarTheme" parent="wrapTheme">
        <item name="android:indeterminateDrawable">@drawable/load_selector_round_progressbar</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxWidth">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <style name="roundProgressBarLargeTheme" parent="wrapTheme">
        <item name="android:indeterminateDrawable">@drawable/load_selector_round_progressbar</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxWidth">48dp</item>
        <item name="android:maxHeight">48dp</item>
    </style>

    <style name="webviewProgressBarTheme" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/selector_webview_progressbar</item>
        <item name="android:minHeight">2.0dp</item>
        <item name="android:maxHeight">2.0dp</item>
    </style>

    <style name="newIndicatorTheme">
        <item name="android:layout_width">@dimen/width_indicator_new</item>
        <item name="android:layout_height">@dimen/width_indicator_new</item>
        <item name="android:background">@drawable/bg_indicator_new</item>
    </style>

    <style name="StyledIndicators" parent="AppTranslucentTheme">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/custom_tab_indicator</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">@drawable/custom_tab_text</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <!--<item name="android:typeface">monospace</item>-->
    </style>

</resources>
