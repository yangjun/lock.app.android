<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wm.lock">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_GPS" />
    <uses-permission android:name="android.permission.READ_LOGS" />

    <application
        android:name=".LockApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme">

        <!-- 友盟start -->
        <meta-data
            android:name="UMENG_APPKEY"
            android:value="56ca9f11e0f55a875000145c" />
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="${UMENG_CHANNEL_VALUE}" />
        <!-- 友盟end -->

        <activity
            android:name=".ui.activities.SplashActivity_"
            android:screenOrientation="portrait"
            android:theme="@style/AppTransparentTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activities.GuideActivity_"
            android:screenOrientation="portrait"
            android:theme="@style/AppFullScreenTheme" />

        <activity
            android:name=".ui.activities.LoginActivity_"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activities.RegisterActivity_"
            android:label="@string/title_register"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize" />

        <activity
            android:name=".ui.activities.GesturePrintEnrollActivity_"
            android:label="@string/title_gesture_print_enroll"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activities.GesturePrintVerifyActivity_"
            android:label="@string/title_gesture_print_verify"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activities.HomeActivity_"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/StyledIndicators"/>

        <activity
            android:name=".ui.activities.OpenDoorActivity_"
            android:label="@string/title_open_door"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ui.activities.SettingActivity_"
            android:label="@string/title_setting"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activities.SettingLockPwdActivity_"
            android:label="@string/title_setting_lock_pwd"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize" />

        <!-- lib-image start -->
        <activity
            android:name="cn.finalteam.galleryfinal.ImagePreviewActivity"
            android:theme="@style/AppFullScreenTheme" />
        <!-- lib-image end -->

        <!--bugly start-->
        <activity
            android:name="com.tencent.bugly.beta.ui.BetaActivity"
            android:theme="@android:style/Theme.Translucent" />
        <!--bugly end-->

    </application>

</manifest>
